ORG 0000H
	LJMP MAIN
ORG 0030H
	
MAIN:  MOV DPTR , #1000H
		MOV R3, #0AH
	UP:	MOVC A,@A+DPTR
		MOV P1,A
		ACALL DELAY
		CLR A 
		INC DPTR
		DJNZ R3, UP
		SJMP MAIN

DELAY:  MOV R1,#90H
	TOP:MOV R2,#10H
	UPP:MOV R4,#0FFH
	AGN:DJNZ R4,AGN
		DJNZ R2,UPP
		DJNZ R1,TOP
		RET
		
ORG 1000H
DB 0C0H,0F9H,0A4H,0B0H,99H,92H,82H,0F8H,80H,90H
END	